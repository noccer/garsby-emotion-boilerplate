{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015", "esnext.asynciterable"],
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "Src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}